<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <RootNamespace>QuantumTicTacToe</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="Engine\QuantumTicTacToe.Engine.csproj" />
  </ItemGroup>
  <ItemGroup>
    <!-- prevent main application from compiling the engine files sitting in subfolder -->
    <Compile Remove="Engine\\**\\*.cs" />
  </ItemGroup>

</Project>
